<h1>Showing selected article</h1>

<h2 align="center">Title:
  <%= @article.title%></h2>

</ul>
<div class="well col-xs-8 col-xs-offset-2">
  <ul class="listing">
    <div class="row center">
      <div class="col-md-4 col-md-offset-4">
        <li>Created by:</li>
        <li><%= link_to gravatar_for(@article.user, size: 50), user_path(@article.user) %></li>
        <li class="article-title">
          <%= link_to @article.user.username, user_path(@article.user) %>
        </li>
        <li>
          <small><%= pluralize(@article.user.articles.count, "article") if @article.user.articles %></small>
        </li>
      </div>
    </div>

  <h4 class="center">
    <strong>Description:</strong>
  </h4>
  <hr>
  <%= simple_format(@article.description) %>
  <div class="article-actions">
    <% if logged_in? && current_user == @article.user %>
      <%= link_to "Edit this article", edit_article_path(@article), class: "btn btn-xs btn-primary" %>
      <%= link_to "Delete this article", article_path(@article), method: :delete, data: {confirm:"Are you sure you want to delete the article?"}, class: "btn btn-xs btn-danger" %>
    <% end %>
    <%= link_to "Back to articles list", articles_path, class: "btn btn-xs btn-success" %>
  </div>
</div>
