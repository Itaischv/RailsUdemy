<h1>Users</h1>
<div align="center">
<%= will_paginate %>

<% @users.each do |user| %>
<ul class="listing">
  <div class="row">
    <div class="well col-md-4 col-md-offset-4">
      <li><%= link_to gravatar_for(user, size: 120), user_path(user[:id]) %></li>
      <li class="article-title">
        <%= link_to user.username, user_path(user) %>
      </li>
      <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small> </li>
      <% if logged_in? and current_user.admin?  %>
        <%= link_to "Delete this user",user_path(user), class: "btn btn-danger", method: :delete, data: {confirm: "Are you sure to delete this user?"} %>
      <% end %>
    </div>
  </div>

</ul>
<%end%>
<%= will_paginate %>
</div>
